
@{
    ViewBag.Title = "Profile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-content ask-question">

    <h2>Profile</h2>

    <div class="container">
        <form id="userDetails">
            <div class="form-group">
                <span class="col-md-2">First Name</span><span class="col-md-10"><input class="form-control" name="FirstName" type="text" /></span>
                <span class="col-md-2">Last Name</span><span class="col-md-10"><input class="form-control" name="LastName" type="text" /></span>
                <span class="col-md-2">Tag Line</span><span class="col-md-10"><input class="form-control" name="TagLine" type="text" /></span>
                <span class="col-md-2">Short Description</span><span class="col-md-10"><input class="form-control" name="ShortDescription" type="text" /></span>
                <span class="col-md-2">Long Description</span><span class="col-md-10"><input class="form-control" name="LongDescription" type="text" /></span>
                <span class="col-md-2">Gender</span><span class="col-md-10">
                    <select id="gender" class="form-control" style="max-width:22% !important">
                        <option value="">Select</option>
                        <option value="male">Male</option>
                        <option value="female">Female</option>
                        <option value="others">Others</option>
                    </select>
                </span>
                
                <span><button id="bbtSave" class="btn btn-primary" type="submit">Submit</button></span>
            </div>
        </form>
    </div>

</div>
<script type="text/javascript">
    $('#bbtSave').click(function () {
        var gender = $("#gender").val();
        var data = $('#userDetails').serialize() + '&Gender=' + gender;
        debugger;
        if (gender != "") {
            $.ajax({
                url: "/User/SaveUserDetails",
                data: data,
                success: function (result) {
                    if (result.success == "true") {
                        window.location = "../../User";
                        }
                    else {
                        alert("Please ensure all fields are filled")
                    }
                },
                error: function (xhr, status) {

                }
            })
        } else {
            alert("Please select gender");
        }
    });
</script>